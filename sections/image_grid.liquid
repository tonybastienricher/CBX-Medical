{%- assign image_1 = section.settings.image_1 -%}
{%- assign image_2 = section.settings.image_2 -%}
<div class='cbx-pt-24 {% render 'bg-color', bg-color: section.settings.couleur_du_background %} {% render 'text-color', text-color: section.settings.couleur_du_texte %}'>
    <div class="cbx-container-site">
        <div class='cbx-min-h-[calc(100vh-110px)] cbx-grid cbx-grid-cols-1 lg:cbx-grid-cols-2 cbx-gap-2.5'>

            <div class='cbx-relative overflow-hidden cbx-rounded cbx-w-full cbx-h-full cbx-inset-0'>
                {% if section.settings.video_1 %}
                    {% render 'render-video', video: section.settings.video_1 %}
                {% else %}
                    {%- if image_1 != null -%}
                        {{
                        image_1
                        | image_url: width: 3840
                        | image_tag:
                        loading: 'lazy',
                        class: 'cbx-absolute cbx-w-full cbx-h-full cbx-inset-0 cbx-object-cover',
                        sizes: '100vw',
                        widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                        alt: alt
                        }}
                    {%- else -%}
                        {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder cbx-absolute cbx-w-full cbx-h-full cbx-inset-0 cbx-object-cover' }}
                    {%- endif -%}
                {% endif %}
            </div>
            <div class='cbx-relative overflow-hidden cbx-rounded cbx-w-full cbx-h-full cbx-inset-0'>
                {%- if image_2 != null -%}
                    {{
                    image_2
                    | image_url: width: 3840
                    | image_tag:
                    loading: 'lazy',
                    class: 'cbx-absolute cbx-w-full cbx-h-full cbx-inset-0 cbx-object-cover',
                    sizes: '100vw',
                    widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                    alt: alt
                    }}
                {%- else -%}
                    {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder cbx-absolute cbx-w-full cbx-h-full cbx-inset-0 cbx-object-cover' }}
                {%- endif -%}
            </div>

        </div>
    </div>
</div>
